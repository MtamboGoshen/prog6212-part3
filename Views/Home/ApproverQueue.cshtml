@model List<ContractMonthlyClaim.Models.Claim>
@{
    ViewData["Title"] = "Approver Queue";
}

<h2>Approver Queue - Pending Claims</h2>

@if (!Model.Any())
{
    <p>There are no pending claims to approve.</p>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Lecturer</th>
                <th>Programme</th>
                <th>Month</th>
                <th>Amount</th>
                <th>Notes</th>
                <th>Document</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                // ========== AUTOMATION LOGIC ==========
                // Check against predefined criteria
                bool isHighValue = claim.Amount > 10000;
                bool isHighHours = claim.HoursWorked > 100;

                // Determine row styling based on automation checks
                string rowClass = "";
                if (isHighValue || isHighHours)
                {
                    // Highlight row in Amber/Yellow to flag for attention
                    rowClass = "table-warning border-start border-warning border-4";
                }
                // ======================================

                <tr class="@rowClass">
                    <td>@claim.LecturerName</td>
                    <td>@claim.Programme</td>
                    <td>@claim.Month</td>
                    <td>
                        @claim.Amount.ToString("C")

                        @if (isHighValue)
                        {
                            <br />
                
                            <span class="badge bg-danger text-white">High Value</span>
                        }
                    </td>
                    <td>
                        @claim.Notes

                        @if (isHighHours)
                        {
                            <br />
                
                            <span class="badge bg-warning text-dark">High Hours (@claim.HoursWorked)</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.Filename))
                        {
                            <a asp-action="ViewDocument" asp-route-filename="@claim.Filename" target="_blank" class="btn btn-sm btn-outline-primary">View Document</a>
                        }
                        else
                        {
                            <span class="text-muted small">No Document</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <form asp-action="ApproveClaim" method="post">
                                <input type="hidden" name="claimId" value="@claim.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-action="RejectClaim" method="post">
                                <input type="hidden" name="claimId" value="@claim.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}